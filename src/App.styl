html {
  margin: 0;
  padding: 0;
}

body {
  margin: 0 auto !important;
  max-width: 800px;
  text-align: center;
  background: #cccccc;
}

.app-header {
  width: 100%;
  height: 80px;
  background: url('./images/header/never-stop-learning-portrait.jpg') 100% 30% no-repeat;
  background-size: 100%;
}
.question-panel {
  padding: 1em;
  font-size: 11px;
}

.question {
  margin: 15px 0;
  font-weight: bold;
  text-align: left;
}

.options {}

.option {
  margin: 1em 0;
  padding: 10px;
  background: #3d9970;
  border-radius: 5px;
  text-align: left;
}

.question-navigation {
  margin: 0 1em;
}
.previous-question-button {
  float: left;
}

.next-question-button {
  float: right;
}

input[type="radio"] {
  display: none;
}

label {
  margin: 0 !important;
}
.option input:checked + label:before {
  border: 1px solid #adb8c0;
  font-size: 18px;
  content: '\2714';
}

.option input:not(:checked) + label:before {
  border: 1px solid #adb8c0;
  padding: 3px 10px;
  content: '';
}