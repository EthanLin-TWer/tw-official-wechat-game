html
   margin: 0
   padding: 0

@keyframes animatedBackground {
   from {
      background-position: 0 0;
   }
   to {
      background-position: 100% 0;
   }
}

@-webkit-keyframes animatedBackground {
   from {
      background-position: 0 0;
   }
   to {
      background-position: 100% 0;
   }
}

@-ms-keyframes animatedBackground {
   from {
      background-position: 0 0;
   }
   to {
      background-position: 100% 0;
   }
}

@-moz-keyframes animatedBackground {
   from {
      background-position: 0 0;
   }
   to {
      background-position: 100% 0;
   }
}

body
   margin: 30px 20px 0!important
   max-width: 800px
   background: #000
   background-image: url('./images/bg-clouds.png');
   background-position: 0px 0px;
   background-size: cover

   animation: animatedBackground 60s linear infinite;
   -ms-animation: animatedBackground 60s linear infinite;
   -moz-animation: animatedBackground 60s linear infinite;
   -webkit-animation: animatedBackground 60s linear infinite;

.app-header
   display: inline-block
   width: 100%

img[alt="header-cloud"]
   display: block
   width: 25%
   height: 25%
   float: right

border-style = 1px solid #adb8c0

.question-panel
   font-size: 11px

.question-content
   margin: 10px 0 20px 0
   text-align: left

.option-container
   margin: 0 0 16px
   border: border-style

   &:selection
      background: #000

.option
   margin: 1em 0
   text-align: left
   display: block

input[type="radio"]
   display: none

label
   margin: 0 !important

.option i:before
   display: inline-block
   position: absolute
   //top: 50%
   height: 20px
   width: 20px

.option-text
   margin-left: 25px
   display: block

.option input:checked + i:before
   content: url('images/yes.svg')
   color: #05f1b2

.option input:not(:checked) + i:before
   content: url('images/no.svg')

// navigation
.question-navigation
   margin: 0 1em

.previous-question-button
   float: left

.next-question-button
   float: right
